{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "outDir": "./dist",
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.spec.ts",
        "public"
    ]
}